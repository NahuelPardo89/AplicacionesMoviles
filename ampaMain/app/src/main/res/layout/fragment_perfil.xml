<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.perfil.PerfilFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:contentDescription="@string/ImagenPerfil"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/labelNombre_perfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/NombreApellido"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nombreTextView_perfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:text="@string/NombreApellido"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/labelEmail_perfiil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:text="@string/Email"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/emailTextView_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/Email"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/edit_button_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/btnEditar" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
