<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/instalacion_imagen"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/ImgInstalacion"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/instalacion_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/NombreInstalacion"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/instalacion_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/DescInstalacion"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/instalacion_costo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/CostoInstalacion"
            android:textSize="14sp" />

        <Button
            android:id="@+id/instalacion_reservar_boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/btnReservar" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>